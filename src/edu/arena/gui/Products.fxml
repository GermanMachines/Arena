<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.arena.gui.ProductsController">
   <children>
      <Pane prefHeight="600.0" prefWidth="722.0" style="-fx-background-color: #c4c4c4;">
         <children>
            <Pane layoutX="14.0" layoutY="14.0" prefHeight="168.0" prefWidth="694.0" style="-fx-background-color: #f4f4f4;">
               <children>
                  <JFXTextField fx:id="nameFld" layoutX="31.0" layoutY="19.0" promptText="Product Name" />
                  <JFXTextField fx:id="qtyFld" layoutX="31.0" layoutY="50.0" promptText="Quantity" />
                  <JFXTextField fx:id="descFld" layoutX="31.0" layoutY="84.0" promptText="Description" />
                  <JFXComboBox fx:id="catFld" layoutX="203.0" layoutY="52.0" prefHeight="25.0" prefWidth="135.0" promptText="Category" />
                  <JFXButton fx:id="addBtn" layoutX="381.0" layoutY="19.0" onAction="#addProduct" prefHeight="25.0" prefWidth="96.0" style="-fx-background-color: #c4c4c4;" text="Add" />
                  <JFXButton layoutX="381.0" layoutY="53.0" onAction="#updateProduct" prefHeight="25.0" prefWidth="96.0" style="-fx-background-color: #c4c4c4;" text="Update" />
                  <JFXButton layoutX="381.0" layoutY="88.0" onAction="#deleteProduct" prefHeight="25.0" prefWidth="96.0" style="-fx-background-color: #c4c4c4;" text="Delete" />
                  <JFXTextField fx:id="priceFld" layoutX="203.0" layoutY="83.0" promptText="Price" />
                  <Label fx:id="productsNumberLbl" layoutX="519.0" layoutY="38.0" prefHeight="25.0" prefWidth="96.0" />
                  <JFXTextField fx:id="imageFld" layoutX="203.0" layoutY="19.0" promptText="Image" />
                  <JFXTextField fx:id="searchByNameFld" layoutX="491.0" layoutY="83.0" onKeyTyped="#search" prefHeight="25.0" prefWidth="152.0" promptText="Search by product name..." />
